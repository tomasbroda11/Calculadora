<CustomButton@Button>:
    background_color: (0.8, 0.8, 0.8, 1)  # Ajusta los valores para un gris más claro
    font_size: 35

<EqualButton@Button>:
    background_color:(1, 0.5, 0.2, 1)   # Ajusta los valores para un naranja más vibrante

GridLayout:
    rows: 2
    BoxLayout:
        size_hint_y: None
        height: dp(200)
        orientation: 'horizontal'  # Asegúrate de que el BoxLayout sea horizontal
        Label:
            id: label
            text: ""
            font_size: 45

    GridLayout:
        rows: 4
        cols: 5
        padding: 5
        spacing: 5
        CustomButton:
            text: "1"
            on_press: label.text += self.text
        CustomButton:
            text: "2"
            on_press: label.text += self.text
        CustomButton:
            text: "3"
            on_press: label.text += self.text
        CustomButton:
            text: "-"
            on_press: label.text += self.text
        CustomButton:
            text: "+" 
            on_press: label.text += self.text
        CustomButton:
            text: "4"
            on_press: label.text += self.text
        CustomButton:
            text: "5"
            on_press: label.text += self.text
        CustomButton:
            text: "6"
            on_press: label.text += self.text
        CustomButton:
            text: "*"
            on_press: label.text += self.text
        CustomButton:
            text: "/"
            on_press: label.text += self.text
        CustomButton:
            text: "7"
            on_press: label.text += self.text
        CustomButton:
            text: "8"
            on_press: label.text += self.text
        CustomButton:
            text: "9"
            on_press: label.text += self.text
        CustomButton:
            text: "Borrar"
            on_press: label.text = ""
        EqualButton:
            text: "="
            on_press: label.text = app.calcular()
